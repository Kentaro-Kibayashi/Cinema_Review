<%# 新規レビュー投稿画面 %>
<section class="hero is-link is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規レビュー投稿
      </h1>
    </div>
  </div>
</section>

<%# validationにかかった場合のポップアップ %>
<% if @review.errors.any? %>
  <div class="notification is-danger">
        <%# pluralizeメソッド : 複数形 変換処理 %>
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @review do |f| %>

          <div class="field">
            <%= f.label :title, "作品名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "レビュー", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "画像", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit "投稿", class: "button is-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</section>