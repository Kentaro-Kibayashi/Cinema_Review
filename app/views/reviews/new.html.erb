<%# 新規レビュー投稿画面 %>
<section class="hero is-success is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規レビュー投稿
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @review do |f| %>

          <div class="field">
            <%= f.label :title, "作品名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "レビュー", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "画像", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit "投稿", class: "button is-success" %>

        <% end %>
      </div>
    </div>
  </div>
</section>